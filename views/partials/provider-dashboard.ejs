<%- include('./partials/head', { title: title }) %>
<%- include('./partials/header') %>

<style>
/* Custom CSS for a professional, focused dashboard layout /
.dashboard-container {
max-width: 900px;
margin: 2rem auto;
padding: 20px;
background-color: #f0f4f8;
border-radius: 12px;
box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
font-family: 'Arial', sans-serif;
}
.header-box {
background: linear-gradient(135deg, #434375 0%, #1a1a40 100%);
color: white;
padding: 30px;
border-radius: 10px;
margin-bottom: 20px;
}
.header-box h1 {
font-size: 2.2rem;
font-weight: 700;
margin-bottom: 5px;
}
.header-box p {
font-size: 1.1rem;
opacity: 0.9;
}
.metrics-grid {
display: grid;
grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
gap: 20px;
margin-bottom: 30px;
}
.metric-card {
background-color: white;
padding: 20px;
border-radius: 8px;
box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
border-left: 5px solid #434375; / Accent color */
}
.metric-card h3 {
font-size: 1rem;
color: #6c757d;
margin-bottom: 5px;
text-transform: uppercase;
letter-spacing: 1px;
}
.metric-card .value {
font-size: 2.5rem;
font-weight: 800;
color: #1a1a40;
}
.actions-section {
margin-bottom: 30px;
}
.action-button {
display: inline-block;
padding: 12px 25px;
background-color: #434375;
color: white;
text-decoration: none;
border-radius: 8px;
font-weight: 600;
transition: background-color 0.3s;
}
.action-button:hover {
background-color: #5d5d9c;
}

/* Reviews Section */
.reviews-section h2 {
    font-size: 1.8rem;
    color: #1a1a40;
    border-bottom: 2px solid #ccc;
    padding-bottom: 10px;
    margin-bottom: 20px;
}
.review-list {
    list-style: none;
    padding: 0;
}
.review-item {
    background-color: white;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 15px;
    border: 1px solid #ddd;
}
.review-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    flex-wrap: wrap;
}
.review-header strong {
    font-size: 1.1rem;
    color: #434375;
}
.review-header .date {
    font-size: 0.9rem;
    color: #6c757d;
}
.review-rating {
    color: #ffc107; /* Gold/Yellow for stars */
    margin-right: 10px;
    font-size: 1.1rem;
}
.review-comment {
    margin-top: 5px;
    line-height: 1.5;
    color: #333;
}
.no-reviews {
    text-align: center;
    color: #6c757d;
    padding: 20px;
    border: 1px dashed #ccc;
    border-radius: 8px;
}

</style>

<div class="dashboard-container">
<% if (message) { %>
<div class="alert alert-success"><%= message %></div>
<% } %>
<% if (error) { %>
<div class="alert alert-danger"><%= error %></div>
<% } %>

<div class="header-box">
    <h1>Welcome, <%= provider.name %>!</h1>
    <p>This is your Service Provider Dashboard for **<%= provider.category %>**.</p>
</div>

<!-- Metrics Summary -->
<div class="metrics-grid">
    <div class="metric-card">
        <h3>Average Rating</h3>
        <div class="value">
            <%= provider.averageRating %> / 5
        </div>
    </div>
    <div class="metric-card">
        <h3>Total Reviews</h3>
        <!-- Only counting reviews with a rating (1-5) -->
        <div class="value"><%= provider.reviewCount %></div>
    </div>
    <div class="metric-card">
        <h3>Total Feedback</h3>
        <!-- Counting all feedback (reviews + inquiries) -->
        <div class="value"><%= provider.reviews.length %></div>
    </div>
</div>

<!-- Actions -->
<div class="actions-section">
    <a href="/provider/profile" class="action-button">
        <i class="fas fa-edit"></i> Edit Your Profile
    </a>
    <a href="/provider/profile/<%= provider._id %>" class="action-button" style="background-color: #6c757d;">
        <i class="fas fa-eye"></i> View Public Profile
    </a>
</div>

<!-- Reviews and Inquiries -->
<div class="reviews-section">
    <h2><i class="fas fa-comment-dots"></i> Recent Customer Feedback</h2>

    <% if (provider.reviews && provider.reviews.length > 0) { %>
        <ul class="review-list">
            <% 
            // Sort reviews by date descending (most recent first)
            const sortedReviews = provider.reviews.sort((a, b) => new Date(b.date) - new Date(a.date));
            sortedReviews.slice(0, 10).forEach(review => { 
                const isReview = review.rating > 0;
                const date = new Date(review.date).toLocaleDateString('en-US', {
                    year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit'
                });
            %>
                <li class="review-item" style="<%= !isReview ? 'border-left-color: #ffc107;' : '' %>">
                    <div class="review-header">
                        <strong><%= review.visitorName %></strong>
                        <span class="date"><%= date %></span>
                    </div>
                    
                    <% if (isReview) { %>
                        <div class="review-rating">
                            <% for(let i = 0; i < 5; i++) { %>
                                <% if (i < review.rating) { %>
                                    <i class="fas fa-star"></i>
                                <% } else { %>
                                    <i class="far fa-star"></i>
                                <% } %>
                            <% } %>
                        </div>
                    <% } else { %>
                        <span style="color: #ffc107; font-weight: 600; font-size: 1.1rem;"><i class="fas fa-question-circle"></i> Inquiry</span>
                    <% } %>
                    
                    <p class="review-comment"><%= review.comment %></p>
                </li>
            <% }) %>
        </ul>
        <% if (provider.reviews.length > 10) { %>
            <div class="text-center" style="color: #6c757d; margin-top: 10px; font-style: italic;">
                Showing 10 most recent pieces of feedback.
            </div>
        <% } %>
    <% } else { %>
        <div class="no-reviews">
            <i class="fas fa-inbox fa-3x" style="margin-bottom: 10px; color: #aaa;"></i>
            <p>You haven't received any reviews or inquiries yet. Share your public profile to start getting feedback!</p>
        </div>
    <% } %>
</div>

</div>

<%- include('./partials/footer') %>