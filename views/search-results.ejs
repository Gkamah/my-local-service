<!-- Search Results EJS Template (views/search-results.ejs) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom scrollbar for the results list */
        #results-list::-webkit-scrollbar {
            width: 8px;
        }
        #results-list::-webkit-scrollbar-thumb {
            background-color: #d1d5db; /* gray-300 */
            border-radius: 4px;
        }
        #results-list::-webkit-scrollbar-track {
            background-color: #f3f4f6; /* gray-100 */
        }
        .result-card {
            transition: transform 0.1s, box-shadow 0.1s;
        }
        .result-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.06);
            cursor: pointer;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen font-sans">

    <!-- Header (Simple Navigation) -->
    <header class="bg-white shadow-md p-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-[#8a2be2]">LocalService Finder</h1>
        <nav>
            <a href="/" class="text-gray-600 hover:text-[#8a2be2] mr-4">Home</a>
            <% if (isLoggedIn) { %>
                <a href="/provider/profile" class="text-gray-600 hover:text-[#8a2be2] mr-4">Dashboard</a>
                <a href="/logout" class="text-red-500 hover:text-red-700">Logout</a>
            <% } else { %>
                <a href="/login" class="text-gray-600 hover:text-[#8a2be2] mr-4">Login</a>
                <a href="/register" class="bg-[#8a2be2] text-white py-2 px-4 rounded-lg hover:bg-purple-700 transition duration-150">Register</a>
            <% } %>
        </nav>
    </header>

    <main class="container mx-auto p-4 md:p-8">
        <h2 class="text-3xl font-extrabold text-gray-800 mb-6 border-b pb-2">Service Provider Search</h2>

        <!-- Search Form -->
        <form action="/search" method="GET" class="mb-8 p-4 bg-white rounded-xl shadow-lg flex flex-col md:flex-row gap-4">
            <input type="text" name="query" placeholder="Search by name or keyword..." value="<%= query %>"
                   class="flex-grow p-3 border border-gray-300 rounded-lg focus:ring-[#8a2be2] focus:border-[#8a2be2]">
            
            <select name="category" class="p-3 border border-gray-300 rounded-lg">
                <option value="All Categories">All Categories</option>
                <% uniqueCategories.forEach(cat => { %>
                    <option value="<%= cat %>" <%= cat === selectedCategory ? 'selected' : '' %>>
                        <%= cat %>
                    </option>
                <% }); %>
            </select>
            
            <button type="submit" 
                    class="md:w-auto p-3 bg-[#8a2be2] text-white font-semibold rounded-lg hover:bg-purple-700 transition duration-150 shadow-md">
                Search
            </button>
        </form>

        <% if (error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
                <span class="block sm:inline"><%= error %></span>
            </div>
        <% } %>

        <div class="flex flex-col md:flex-row gap-8">
            <!-- Results List (Left Column) -->
            <div class="md:w-1/2 lg:w-2/3 bg-white p-6 rounded-xl shadow-lg h-[70vh] overflow-y-auto" id="results-list">
                <h3 class="text-xl font-semibold text-gray-700 mb-4 sticky top-0 bg-white pt-1">
                    Found <%= providers.length %> Providers
                </h3>
                
                <% if (providers && providers.length > 0) { %>
                    <% providers.forEach(provider => { %>
                        <div class="result-card flex items-start p-4 mb-4 border border-gray-200 rounded-lg bg-gray-50 hover:bg-gray-100"
                             data-id="<%= provider._id %>"
                             onclick="viewDetails('<%= provider._id %>')">
                            
                            <!-- Profile Picture (Small Thumbnail) - FIX: Use a static placeholder to avoid EJS compilation failure 
                                 caused by injecting potentially large Base64 strings repeatedly. The full image loads correctly in the details panel via JavaScript. -->
                            <img src="https://placehold.co/60x60/8a2be2/ffffff?text=P" 
                                 alt="<%= provider.name %>" 
                                 class="w-16 h-16 object-cover rounded-full mr-4 border-2 border-[#8a2be2]">

                            <div>
                                <h4 class="text-lg font-bold text-gray-800"><%= provider.name %></h4>
                                <p class="text-sm text-[#8a2be2] font-medium"><%= provider.category %></p>
                                <!-- Display a snippet of the description -->
                                <p class="text-gray-500 text-sm mt-1">
                                    <%= provider.description ? provider.description.substring(0, 70) + '...' : 'Click to see details...' %>
                                </p>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-center text-gray-500 mt-10">No service providers found matching your criteria.</p>
                <% } %>
            </div>

            <!-- Details Panel (Right Column) -->
            <div class="md:w-1/2 lg:w-1/3 bg-white p-6 rounded-xl shadow-lg md:h-[70vh] md:sticky md:top-4 overflow-y-auto" id="details-panel">
                <div id="initial-message" class="text-center p-10 text-gray-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto mb-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l5-2 2-5m0 0l-5 5 5 2 2 5-5-2 2-5z" />
                    </svg>
                    <p class="font-semibold">Click on a provider listing to view their full profile.</p>
                </div>
                <div id="provider-details" class="hidden">
                    <!-- Dynamic content will be injected here -->
                </div>
            </div>
        </div>
    </main>

    <script>
        // CRITICAL FIX: Safely parse provider data embedded from the server.
        // The EJS engine replaces <%- JSON.stringify(...) %> with the data before sending to the client.
        const providersData = JSON.parse('<%- JSON.stringify(providers || []) %>');

        // Helper function to handle Base64 image data
        function getImageUrl(url) {
            if (!url) {
                // Fallback placeholder image
                return 'https://placehold.co/128x128/8a2be2/ffffff?text=P';
            }
            // Check if it's already a full data URI (starts with 'data:')
            if (url.startsWith('data:image')) {
                return url;
            }
            // Assume it's a raw Base64 string and prepend the necessary prefix
            return `data:image/jpeg;base64,${url}`;
        }

        // Function to display provider details in the right panel
        function viewDetails(providerId) {
            const provider = providersData.find(p => p._id === providerId);
            const detailsPanel = document.getElementById('provider-details');
            const initialMessage = document.getElementById('initial-message');

            if (!provider) {
                console.error("Provider data not found for ID:", providerId);
                return;
            }

            initialMessage.classList.add('hidden');
            detailsPanel.classList.remove('hidden');

            // --- CRITICAL FIX: Ensure Image and Description are correctly used ---
            const profileImageSrc = getImageUrl(provider.profilePictureUrl);
            const descriptionText = provider.description || 'No detailed service description provided.';
            
            // Build the organized HTML for the details panel
            detailsPanel.innerHTML = `
                <div class="text-center pb-6 border-b mb-6">
                    <img src="${profileImageSrc}" 
                         onerror="this.onerror=null; this.src='https://placehold.co/128x128/8a2be2/ffffff?text=P'"
                         alt="${provider.name}" 
                         class="w-32 h-32 object-cover rounded-full mx-auto mb-4 border-4 border-[#8a2be2]">
                    <h3 class="text-2xl font-bold text-gray-900">${provider.name}</h3>
                    <p class="text-lg text-[#8a2be2] font-semibold">${provider.category}</p>
                </div>

                <div class="space-y-6">
                    <!-- Description Card -->
                    <div class="bg-gray-50 p-4 rounded-lg shadow-inner">
                        <h4 class="text-xl font-semibold text-gray-700 mb-2 border-b pb-1">About Services</h4>
                        <p class="text-gray-600 whitespace-pre-wrap">${descriptionText}</p>
                    </div>

                    <!-- Contact Card -->
                    <div class="bg-gray-50 p-4 rounded-lg shadow-inner">
                        <h4 class="text-xl font-semibold text-gray-700 mb-2 border-b pb-1">Contact Information</h4>
                        <div class="flex items-center text-gray-800">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-[#8a2be2]" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M7 2a2 2 0 00-2 2v12a2 2 0 002 2h6a2 2 0 002-2V4a2 2 0 00-2-2H7zm3 14a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                            </svg>
                            <span class="font-medium">${provider.contactInfo || 'N/A'}</span>
                        </div>
                        <p class="text-sm text-gray-500 mt-2">
                           Reach out to the provider directly using the contact details above.
                        </p>
                    </div>

                    <a href="/provider/view/${provider._id}" class="block text-center mt-6 p-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-150 font-medium">
                        View Full Public Profile
                    </a>
                </div>
            `;
            // Scroll the details panel to the top
            detailsPanel.parentElement.scrollTop = 0;
        }

        // Trigger detail view for the first result on initial load if results exist
        window.onload = function() {
            if (providersData.length > 0) {
                // Wait for the DOM to fully render the cards before trying to activate the first one
                setTimeout(() => {
                    viewDetails(providersData[0]._id);
                }, 50);
            }
        };
    </script>

</body>
</html>
