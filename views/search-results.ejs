<!-- views/search-results.ejs -->
<%- include('./partials/head', { title: title }) %>

<div class="container p-4 md:p-8">
    <div class="max-w-6xl mx-auto bg-white shadow-xl rounded-xl p-6">
        <h1 class="text-3xl font-bold text-[#1a1a40] mb-6 border-b pb-3">
            <i class="fas fa-search text-[#8a2be2] mr-2"></i> Find Local Service Providers
        </h1>

        <!-- Search Form -->
        <form action="/search" method="GET" class="mb-8 p-4 bg-gray-50 rounded-lg shadow-inner flex flex-col md:flex-row gap-4">
            <input type="text" name="query" placeholder="Search by name or keyword..." value="<%= query %>"
                   class="flex-grow p-3 border border-gray-300 rounded-lg focus:ring-[#8a2be2] focus:border-[#8a2be2]">
            
            <select name="category" class="p-3 border border-gray-300 rounded-lg">
                <option value="">All Categories</option>
                <% uniqueCategories.forEach(cat => { %>
                    <option value="<%= cat %>" <%= cat === selectedCategory ? 'selected' : '' %>>
                        <%= cat %>
                    </option>
                <% }) %>
            </select>

            <button type="submit" class="p-3 bg-[#1a1a40] text-white font-semibold rounded-lg hover:bg-[#434375] transition duration-200">
                <i class="fas fa-search mr-2"></i> Search
            </button>
        </form>
        <!-- End Search Form -->

        <div class="flex flex-col md:flex-row gap-6">
            
            <!-- Left Panel: Provider List (Scrollable) -->
            <div id="providerList" class="md:w-1/3 space-y-4 overflow-y-auto max-h-[70vh] pr-2">
                <h2 class="text-lg font-semibold text-[#434375] sticky top-0 bg-white z-10 py-1 border-b">
                    Available Providers (<%= providers.length %> Found)
                </h2>
                
                <% if (providers.length === 0) { %>
                    <div class="p-4 text-center text-gray-500 italic">
                        No Results Found. We couldn't find any subscribed providers matching your search.
                    </div>
                <% } else { %>
                    <!-- EJS LOOP to render actual provider cards -->
                    <% providers.forEach(provider => { %>
                        <div class="provider-card p-4 bg-white rounded-lg shadow-md flex items-center gap-4" 
                             onclick="viewDetails('<%= provider._id %>', this)">
                            <img src="<%= provider.profilePictureUrl || 'https://placehold.co/64x64/1a1a40/ffffff?text=P' %>" 
                                 alt="<%= provider.name %>" 
                                 class="w-16 h-16 rounded-full object-cover border-2 border-gray-300">
                            <div>
                                <h3 class="text-lg font-semibold text-[#1a1a40]"><%= provider.name %></h3>
                                <p class="text-sm text-gray-600"><i class="fas fa-tools mr-1 text-purple-500"></i><%= provider.category %></p>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>

            <!-- Right Panel: Detail View -->
            <div id="detailView" class="md:w-2/3 p-6 bg-gray-50 border border-gray-200 rounded-lg shadow-inner min-h-[500px] flex items-center justify-center">
                <p class="text-gray-500 italic text-xl">Select a provider on the left to view their detailed profile.</p>
            </div>

        </div>
    </div>
</div>

<style>
    .provider-card {
        transition: all 0.2s ease-in-out;
        cursor: pointer;
        border-left: 5px solid transparent;
    }
    .provider-card:hover {
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
    }
    .provider-card.active {
        border-left-color: #8a2be2; /* Purple accent */
        background-color: #f3f4f6;
    }
</style>

<script>
    // Copy the providers array from the server-side to the client-side JavaScript
    // This allows the client-side JS to access the data without re-querying the database
    const providersData = <%- JSON.stringify(providers) %>;
    let activeProviderId = null;

    /**
     * Handles the click event to show provider details.
     * @param {string} id - The ID of the provider to display.
     * @param {HTMLElement} element - The clicked list item element for styling.
     */
    function viewDetails(id, element) {
        // Find the provider in the client-side data array
        const provider = providersData.find(p => p._id === id);
        const detailContainer = document.getElementById('detailView');
        
        // Highlight the active card
        document.querySelectorAll('.provider-card').forEach(card => card.classList.remove('active'));
        if (element) {
            element.classList.add('active');
        }
        activeProviderId = id;

        if (provider) {
            detailContainer.innerHTML = `
                <div class="w-full">
                    <div class="flex items-center space-x-6 mb-6 pb-4 border-b border-gray-300">
                        <img src="${provider.profilePictureUrl || 'https://placehold.co/96x96/1a1a40/ffffff?text=P+P'}" 
                             alt="${provider.name}'s Profile Picture" 
                             class="w-24 h-24 rounded-full object-cover border-4 border-[#8a2be2] shadow-lg"
                             onerror="this.onerror=null;this.src='https://placehold.co/96x96/1a1a40/ffffff?text=P+P';">
                        <div>
                            <h2 class="text-3xl font-bold text-[#1a1a40]">${provider.name}</h2>
                            <p class="text-xl text-[#434375] font-medium"><i class="fas fa-tools mr-2"></i> ${provider.category}</p>
                        </div>
                    </div>
                    
                    <div class="space-y-4">
                        <h3 class="text-2xl font-semibold text-[#1a1a40] border-l-4 border-purple-500 pl-3">Services Offered</h3>
                        <p class="text-gray-700 leading-relaxed bg-white p-4 rounded-lg shadow-sm italic">
                            ${provider.description || 'The service provider has not added a description yet.'}
                        </p>
                        
                        <h3 class="text-2xl font-semibold text-[#1a1a40] border-l-4 border-purple-500 pl-3 pt-4">Contact Information</h3>
                        <div class="bg-white p-4 rounded-lg shadow-sm space-y-2">
                            <p class="text-gray-700">
                                <i class="fas fa-phone mr-3 text-green-600"></i> 
                                <strong>Phone/WhatsApp:</strong> ${provider.contactInfo}
                            </p>
                            <p class="text-gray-700">
                                <i class="fas fa-envelope mr-3 text-red-600"></i> 
                                <strong>Email:</strong> ${provider.email}
                            </p>
                            <button class="mt-4 w-full py-3 bg-[#1a1a40] text-white font-bold rounded-lg hover:bg-[#434375] transition duration-200">
                                <i class="fas fa-comments mr-2"></i> Book This Service Provider
                            </button>
                        </div>
                    </div>
                </div>
            `;
        } else {
            detailContainer.innerHTML = '<p class="text-gray-500 italic text-xl">Provider details not found.</p>';
        }
    }

    // Initialize the view on load by clicking the first provider
    document.addEventListener('DOMContentLoaded', () => {
        if (providersData.length > 0) {
            // Wait for the EJS to render the cards, then trigger the click on the first one
            setTimeout(() => {
                const firstCard = document.querySelector('.provider-card');
                if (firstCard) {
                    // Extract ID from the onclick attribute to pass to viewDetails
                    const firstProviderId = providersData[0]._id; 
                    viewDetails(firstProviderId, firstCard);
                }
            }, 50); // Small delay ensures EJS rendering is complete
        }
    });
</script>

<%- include('./partials/footer') %>
