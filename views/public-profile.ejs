<!-- views/public-profile.ejs -->
<%- include('./partials/head', { title: title }) %>

<div class="container profile-view-container">
    <div class="profile-card">
        <header class="profile-header">
            <div class="profile-photo-lg">
                <i class="fas fa-user-circle"></i>
            </div>
            <div class="profile-info">
                <h1><%= provider.name %></h1>
                <span class="category-badge"><i class="fas fa-tools"></i> <%= provider.category %></span>
                <p class="status-badge status-success">
                    <i class="fas fa-certificate"></i> **Verified & Subscribed Professional**
                </p>
            </div>
        </header>

        <section class="contact-details">
            <h2>Contact Information</h2>
            <div class="detail-item">
                <i class="fas fa-envelope icon-primary"></i>
                <div class="detail-content">
                    <label>Email Address</label>
                    <p><%= provider.email %></p>
                </div>
            </div>
            <div class="detail-item">
                <i class="fas fa-phone icon-primary"></i>
                <div class="detail-content">
                    <label>Phone / WhatsApp</label>
                    <p><%= provider.contactInfo %></p>
                </div>
            </div>
        </section>

        <section class="service-details">
            <h2>About This Service</h2>
            <p class="bio-text">
                This service provider is a verified, active subscriber committed to quality work in the **<%= provider.category %>** field. Contact them directly via the information above to discuss your project and check their availability. 
            </p>
            <p class="commitment-text">
                <i class="fas fa-heart"></i> Committed to professionalism and customer satisfaction.
            </p>
        </section>
        
        <a href="/search" class="btn-primary back-to-search">
            <i class="fas fa-arrow-left"></i> Back to Search Results
        </a>

    </div>
</div>

<style>
    .profile-view-container {
        max-width: 650px;
        margin: 3rem auto;
        padding: 1rem;
        font-family: Arial, sans-serif;
    }
    
    .profile-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 25px;
        padding-bottom: 2rem;
        margin-bottom: 2rem;
        border-bottom: 2px solid #f0f0f5;
    }

    /* Large Profile Photo Placeholder */
    .profile-photo-lg {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #e6e6fa; /* Light purple tint */
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        border: 4px solid #434375;
    }

    .profile-photo-lg i {
        font-size: 4rem;
        color: #8a2be2; /* Blue-violet */
    }

    .profile-info h1 {
        font-size: 2rem;
        color: #1a1a40;
        margin: 0 0 5px 0;
    }
    
    .category-badge {
        display: inline-block;
        padding: 0.4rem 1rem;
        background-color: #d1e7dd;
        color: #0f5132;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }
    .category-badge i {
        margin-right: 5px;
    }

    .status-badge {
        font-size: 0.9rem;
        font-weight: 700;
        color: #38a169;
        display: block;
    }
    .status-badge i {
        margin-right: 5px;
    }

    /* Contact and Service Sections */
    section {
        margin-bottom: 2rem;
        padding-top: 1rem;
    }
    
    section h2 {
        color: #434375;
        font-size: 1.3rem;
        margin-bottom: 1rem;
        border-bottom: 1px dashed #e0e0e0;
        padding-bottom: 5px;
    }

    .detail-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 1.5rem;
    }

    .icon-primary {
        font-size: 1.5rem;
        color: #1a1a40;
        flex-shrink: 0;
        margin-top: 5px;
    }

    .detail-content label {
        display: block;
        font-size: 0.8rem;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 2px;
    }

    .detail-content p {
        font-size: 1.1rem;
        color: #333;
        margin: 0;
        word-break: break-all;
    }
    
    .bio-text {
        font-size: 1rem;
        line-height: 1.6;
        color: #333;
        margin-bottom: 1.5rem;
        background-color: #f9f9ff;
        padding: 15px;
        border-left: 5px solid #434375;
        border-radius: 4px;
    }

    .commitment-text {
        color: #1a1a40;
        font-style: italic;
        font-weight: 500;
        font-size: 0.95rem;
    }

    .commitment-text i {
        color: #dc3545;
        margin-right: 5px;
    }
    
    .back-to-search {
        display: block;
        width: 100%;
        text-align: center;
        margin-top: 2rem;
        padding: 12px;
        background-color: #6c757d;
        color: white;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s;
    }
    
    .back-to-search:hover {
        background-color: #5a6268;
    }
    
    /* Responsive adjustments */
    @media (max-width: 600px) {
        .profile-card {
            padding: 1.5rem;
        }
        .profile-header {
            flex-direction: column;
            text-align: center;
        }
        .profile-info {
            text-align: center;
        }
        .profile-info h1 {
            font-size: 1.75rem;
        }
    }
</style>

<%- include('./partials/footer') %>
