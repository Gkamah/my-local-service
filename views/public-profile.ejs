<!-- views/public-profile.ejs -->
<%- include('./partials/head', { title: title }) %>

<div class="container profile-view-container">
    <div class="profile-card">
        <header class="profile-header">
            <div class="profile-photo-lg">
                <% 
                    // 1. Photo Logic: Check for Base64 URL and ensure correct prefix
                    let finalProfileUrl = provider.profilePictureUrl;
                    if (finalProfileUrl && finalProfileUrl.length > 0 && !finalProfileUrl.startsWith('data:image')) {
                        // Assuming JPEG/PNG if it's a raw Base64 string (Crucial for rendering)
                        finalProfileUrl = `data:image/jpeg;base64,${finalProfileUrl}`;
                    }
                %>
                <% if (finalProfileUrl && finalProfileUrl.startsWith('data:image')) { %>
                    <!-- Display the actual image, matching the container size -->
                    <img 
                        src="<%= finalProfileUrl %>" 
                        alt="<%= provider.name %> Profile Picture" 
                        style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;"
                        onerror="this.onerror=null; this.src='https://placehold.co/100x100/434375/ffffff?text=P';"
                    >
                <% } else { %>
                    <!-- Fallback: Font Awesome Icon (Original style) -->
                    <i class="fas fa-user-circle"></i>
                <% } %>
            </div>
            <div class="profile-info">
                <h1><%= provider.name %></h1>
                <span class="category-badge"><i class="fas fa-tools"></i> <%= provider.category %></span>
                <p class="status-badge status-success">
                    <i class="fas fa-certificate"></i> **Verified & Subscribed Professional**
                </p>
            </div>
        </header>

        <section class="contact-details">
            <h2>Contact Information</h2>
            <div class="detail-item">
                <i class="fas fa-envelope icon-primary"></i>
                <div class="detail-content">
                    <label>Email Address</label>
                    <p><%= provider.email %></p>
                </div>
            </div>
            <div class="detail-item">
                <!-- Phone Icon -->
                <i class="fas fa-phone icon-primary"></i>
                <div class="detail-content">
                    <label>Phone / WhatsApp</label>
                    <p><%= provider.contactInfo %></p>
                </div>
            </div>
        </section>

        <section class="service-details">
            <h2>About My Services</h2>
            <% 
                // 2. Description Logic: Display actual text or fallback
                const descriptionText = provider.description ? provider.description.trim() : ''; 
            %>
            
            <% if (descriptionText.length > 0) { %>
                <p class="bio-text" style="white-space: pre-wrap; border-left-color: #8a2be2; background-color: #f3f3ff;">
                    <%= descriptionText %>
                </p>
            <% } else { %>
                <p class="bio-text">
                    This service provider is a verified, active subscriber committed to quality work in the **<%= provider.category %>** field.
                    **They have not yet added a detailed description of their services.** Contact them directly via the information above to discuss your project and check their availability. 
                </p>
            <% } %>

            <p class="commitment-text">
                <i class="fas fa-heart"></i> Committed to professionalism and customer satisfaction.
            </p>
        </section>
        
        <a href="/search" class="btn-primary back-to-search">
            <i class="fas fa-arrow-left"></i> Back to Search Results
        </a>

    </div>
</div>

<style>
    /* ... (CSS styles remain the same, ensuring compatibility with your existing public/css/style.css) ... */
    .profile-view-container {
        max-width: 650px;
        margin: 3rem auto;
        padding: 1rem;
        font-family: Arial, sans-serif;
    }
    
    .profile-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 25px;
        padding-bottom: 2rem;
        margin-bottom: 2rem;
        border-bottom: 2px solid #f0f0f5;
    }

    /* Large Profile Photo Placeholder/Container */
    .profile-photo-lg {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #e6e6fa; /* Light purple tint */
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        border: 4px solid #434375;
        overflow: hidden; /* Ensures image is clipped to circle */
    }

    .profile-photo-lg i {
        font-size: 4rem;
        color: #8a2be2; /* Blue-violet */
    }

    .profile-info h1 {
        font-size: 2rem;
        color: #1a1a40;
        margin: 0 0 5px 0;
    }
    
    .category-badge {
        display: inline-block;
        padding: 0.4rem 1rem;
        background-color: #d1e7dd;
        color: #0f5132;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }
    .category-badge i {
        margin-right: 5px;
    }

    .status-badge {
        font-size: 0.9rem;
        font-weight: 700;
        color: #38a169;
        display: block;
    }
    .status-badge i {
        margin-right: 5px;
    }

    /* Contact and Service Sections */
    section {
        margin-bottom: 2rem;
        padding-top: 1rem;
    }
    
    section h2 {
        color: #434375;
        font-size: 1.3rem;
        margin-bottom: 1rem;
        border-bottom: 1px dashed #e0e0e0;
        padding-bottom: 5px;
    }

    .detail-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 1.5rem;
    }

    .icon-primary {
        /* FIX: If the global CSS is making this icon large, the font-size must be reset here */
        font-size: 1.5rem !important; /* Adding !important as a last resort */
        color: #1a1a40;
        flex-shrink: 0;
        margin-top: 5px;
    }

    .detail-content label {
        display: block;
        font-size: 0.8rem;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 2px;
    }

    .detail-content p {
        font-size: 1.1rem;
        color: #333;
        margin: 0;
        word-break: break-all;
    }
    
    .bio-text {
        font-size: 1rem;
        line-height: 1.6;
        color: #333;
        margin-bottom: 1.5rem;
        background-color: #f9f9ff;
        padding: 15px;
        border-left: 5px solid #434375;
        border-radius: 4px;
    }

    .commitment-text {
        color: #1a1a40;
        font-style: italic;
        font-weight: 500;
        font-size: 0.95rem;
    }

    .commitment-text i {
        color: #dc3545;
        margin-right: 5px;
    }
    
    .back-to-search {
        display: block;
        width: 100%;
        text-align: center;
        margin-top: 2rem;
        padding: 12px;
        background-color: #6c757d;
        color: white;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s;
    }
    
    .back-to-search:hover {
        background-color: #5a6268;
    }
    
    /* Responsive adjustments */
    @media (max-width: 600px) {
        .profile-card {
            padding: 1.5rem;
        }
        .profile-header {
            flex-direction: column;
            text-align: center;
        }
        .profile-info {
            text-align: center;
        }
        .profile-info h1 {
            font-size: 1.75rem;
        }
    }
</style>

<%- include('./partials/footer') %>
