<%- include('partials/head', { title: 'Home' }) %>

<div class="hero-section">
    <h1>Find Local Service Providers Near You</h1>
    <p>Securely connect with verified service providers in your area.</p>

    <form action="/search" method="GET" class="search-form">
        <input type="text" name="q" placeholder="E.g., Plumber, Electrician, Gardener" required>
        <select name="category">
            <option value="">All Categories</option>
            <option value="plumbing">Plumbing</option>
            <option value="electrician">Electrician</option>
            <option value="gardening">Gardening</option>
            <option value="cleaning">Cleaning</option>
            </select>
        <button type="submit" class="btn-primary">Search Services</button>
    </form>
</div>

<%- include('partials/footer') %>